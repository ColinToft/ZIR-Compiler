import ti.*

byte b = 127

void increase() {
    if b > 0 {
        b++
    }
}

void decrease() {
    if b < 255 {
        b--
    }
}

int main() {
    setCursor(0, 0)
    print(b)

    while true {
        byte key = getKey()
        if key == K_UP {
            increase()
        } else if key == K_DOWN {
            decrease()
        } else if key == K_CLEAR {
            return 0
        }
    }
}